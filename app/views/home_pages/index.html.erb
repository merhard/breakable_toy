<div class='row content'>
  <div class='row-8 columns'>
    <div class='border'>
      <p>Rotating Pics</p>
    </div>
  </div>

  <div class='row-4 columns'>
    <div class='border'>
      <%= render "devise/registrations/new_sign_up_form" %>
    </div>
  </div>

  <div class='row-5 columns'>
    <div class='border'>
      <p>List of sports</p>
      <% @sports.each do |sport| %>
        <p><%= sport.name %></p>
      <% end %>
    </div>
  </div>

  <div class='row-7 columns'>
    <div class='border'>
      <p>Map</p>
    </div>
  </div>
</div>
