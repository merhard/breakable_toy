<!DOCTYPE html>
<html>
  <head>
    <title>Toy</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class='whole-page'>

      <%= render 'header' %>

      <%= render 'nav_bar' %>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>

      <%= render 'footer' %>

      <%= yield :scripts %>

    </div>
  </body>
</html>
